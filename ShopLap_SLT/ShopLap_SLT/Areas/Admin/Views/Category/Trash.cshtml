@model IEnumerable<MyClass.Models.Category>
@{
    ViewBag.Title = "Thùng rác danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header {
    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />
}
@section footer{
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>
        let table = new DataTable('#myTable');
    </script>
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">Thùng rác danh mục sản phẩm</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Index","Category")" class="btn btn-sm btn-info"><i class="fas fa-long-arrow-alt-left"></i> Quay lại</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th class="text-center" style="width:20px">#</th>
                            <th>Danh Mục</th>
                            <th>
                                Slug
                            </th>
                            <th>
                                Ngày tạo
                            </th>
                            <th class="text-center" style="width:120px">Chức năng</th>
                            <th class="text-center" style="width:20px">ID</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><input type="checkbox" name="checkId" value="" /></td>
                                <td>@item.Name</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Slug)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedAt)
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("Retrash","Category",  new { id = item.Id })" class="btn btn-sm btn-info"><i class="fas fa-trash-restore"></i> </a>
                                    <a href="@Url.Action("Delete","Category",  new { id = item.Id })" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> </a>
                                </td>
                                <td>@item.Id</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>

        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
